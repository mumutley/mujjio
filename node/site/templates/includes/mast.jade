a(href='#{url}')
    img(width="129", height="60", alt="mujjio", src="/public/images/logo.png")
#main_navigation.main-menu
    ul
        li
            form(method="post", action="login")
                fieldset.search-place(style="float: left; margin-right: -20px")
                    input.username-input(type="text", value="username", name="username", onfocus="if(this.value=='username')this.value='';", onblur="if(this.value=='')this.value='username';")
                fieldset.search-place(style="float: left")
                    input.password-input(type="password", value="password", name="password", onfocus="if(this.value=='password')this.value='';", onblur="if(this.value=='')this.value='password';")
                div(style="width:80px; height:10px;margin-left: 5px; margin-top:5px;float: left")
                    input.grey-button-small(type="submit", value="Log in")
                br
                fieldset.search-place(style="float: left")
                    input(type="checkbox", name="memory", value="true")span Remember me                 
                fieldset.search-place(style="float: left")
                    a(href="#")span I forgot my password                 
                                        
